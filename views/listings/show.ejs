<% layout('/layout/boilerplate.ejs') -%>
    <div class="row">
        <div class="col-8 offset-2 mt-3">
            <h3 class=" offset-3">
                <%= data.title %>
            </h3>
            <div class="card col-6 offset-3 show-card">
                <img src="<%= data.image.url %>" class="card-img-top give-img" alt="listing_image" style="height: 30vh;">
                <div class="card-body">
                    <p class="card-text"><i>Owned by:<%= data.owner ? data.owner.username : "Unknown" %></i></p>
                    <p class="card-text"><%= data.description %><br></p>
                    <p class="card-text">&#8377;<%= data.price.toLocaleString("en-IN") %></p>
                    <p class="card-text"><%= data.location %> </p>
                    <p class="card-text"><%= data.country %></p>
                </div>
            </div>
            <br>
           <% if (currUser && data.owner && data.owner._id.equals(currUser._id)) { %>
            <div class="btns">
                <a href="/listing/<%= data._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
                &nbsp;&nbsp;
                <form action="/listing/<%= data._id %>?_method=DELETE" method="post">
                    <button class="btn btn-dark">delete</button>
                </form>
            </div>
            <%}%>

            
            <div class="col-8 offset-2 mt-3 mb-3">
                <hr>
                
                <h4>Leave a review</h4>
                <form action="/listing/<%= data._id %>/reviews" method="post" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comment</label><br>
                        <textarea name="review[comment]" required id="comment" class="form-control" col="20" rows="5"></textarea>
                        <div class="invalid-feedback">Please add  valid comment</div>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <hr>
               

           
                <h4>All Reviews</h4>
                <div class="row">
                <% for( reviews of data.reviews){ %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h4 class="card-title">@<%= reviews.author.username %></h4>
                                <p class="card-text"><%= reviews.comment %></p>  
                                <p class="starability-result card-text" data-rating="<%= reviews.rating %>"></p>
                                <hr>
                                
                            </div>
                            
                            <form action="/listing/<%= data._id %>/reviews/<%= reviews._id %>?_method=DELETE" method="post" class="mb-3">

                                <button class="btn btn-sm btn-dark">delete</button>
                            </form>
                        </div>
                <% } %>
                </div>
               
            </div>
            


        </div>
    </div>