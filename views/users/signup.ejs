<%- layout('/layout/boilerplate.ejs') %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Sign up on wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
            
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label><br>
                    <input type="text" name="username" required id="username" class="form-control">
                    <div class="valid-feedback">Looks good</div>
                </div>
                
                 <div class="mb-3">
                    <label for="email" class="form-label">email:</label><br>
                    <input type="text" name="email" required id="email" class="form-control">
                    
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label><br>
                    <input type="text" name="password" required id="password" class="form-control">
                    <div class="valid-feedback">Looks good</div>
                </div>
                <button class="btn btn-success">Signup</button>

            </form>
        </div>
    </div>